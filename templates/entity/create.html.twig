{% extends 'base.html.twig' %}

{% block title %}Hello EntityController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1 class="mb-2 font-bold">Add New Entity</h1>
        <hr class="py-3" />

        {{ form_start(form) }}

            {{ form_widget(form.name) }}

            {{ form_widget(form.description) }}

            {{ form_widget(form.images) }}

            <div class="py-5">
                {{ form_row(form.save) }}
                <a class="text-white bg-gray-500 px-5 py-1.5 rounded font-medium text-base float-right mr-2" href="{{ path('entities') }}">Cancel</a>
            </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
